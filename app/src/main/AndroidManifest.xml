<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.profit3.sunshine">

    <!-- This permission is necessary in order for Sunshine to perform network access. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="15" />

        <activity
            android:name="com.example.profit3.sunshine.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.example.profit3.sunshine.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.example.profit3.sunshine.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.profit3.sunshine.MainActivity" />
        </activity>
        <activity
            android:name="com.example.profit3.sunshine.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.profit3.sunshine.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.profit3.sunshine.MainActivity" />
        </activity>

        <provider
            android:name=".data.WeatherProvider"
            android:authorities="@string/content_authority"
            android:exported="false"
            android:enabled="true"/>
    </application>

</manifest>
